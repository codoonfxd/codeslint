{
  "name": "codeslint",
  "description": "代码静态检查相关工具仓库",
  "author": {
    "name": "沈经纬",
    "email": "shenjw@codoon.com"
  },
  "devDependencies": {
    "@codoonfxd/commitlint-config": "^0.1.0",
    "@commitlint/cli": "^8.1.0",
    "husky": "^3.0.4",
    "lerna": "^3.16.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:codoonfxd/codeslint.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@codoonfxd/commitlint-config"
    ]
  }
}
